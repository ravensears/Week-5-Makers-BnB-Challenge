<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="<%= url('/style.css') %>" type="text/css" />
  <title>Document</title>
</head>
<body>

<!--        NAVIGATION MENU           -->

  <nav>
    <div class="menu">
      <div class="logo">
        <a href="#">CherBnB</a>
      </div>
      <ul>
        <li><a href="/spaces">Spaces</a></li>
        <li><a href="#">Requests</a></li>
        <li>
          <% if @user %>
            <form action="/sessions/destroy" method="post">
            <input class="signin_button" type="submit" value="Sign out" />
            </form>
          <% else %>
            <form action="/sessions/new" method="get">
            <input class="signin_button" type="submit" value="Sign In" />
            </form>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <!--        MAIN PAGE           -->
  <div class="img">
  <div class="center">
    <% if @user %>
      <h1>Welcome, <%= @user.name %>!</h1>
    <% end %>
    <% if @message %>
      <h1><%= @message %></h1>
    <% end %>
  </div>
  </div>


</body>
</html>

